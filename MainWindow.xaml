<Window x:Class="sistem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sistem"
        mc:Ignorable="d"
        Title="Equipos de Chile" Height="450" Width="800">
    <Grid>
        <DockPanel LastChildFill="False">
            <Menu x:Name="mnPrincipal" Height="20" DockPanel.Dock="Top" IsMainMenu="True" Width="Auto">
                <MenuItem Header="Agregar Equipo" x:Name="btnAgregar" Click="AbrirAgregar"/>
                <MenuItem Header="Listar Equipos" x:Name="btnListar" Click="AbrirListar"/>
            </Menu>

        </DockPanel>
        <Label Content="Para actualizar ir  a 'Listar Equipos'" HorizontalAlignment="Left"  Margin="57,130,0,0" VerticalAlignment="Top"/>
        <TextBlock TextWrapping="Wrap" Text="Equipos de Chile" Margin="57,32,444,309" FontSize="36" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0"/>
                    <RotateTransform/>
                    <TranslateTransform Y="0"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
    </Grid>
</Window>
